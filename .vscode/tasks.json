{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "\"${workspaceRoot}/build/luabuild/lua.exe\"",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": false,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "发布中文版",
            "args": [
                ".\\build\\execute.lua",
                "${workspaceRoot}",
                "${workspaceRoot}\\build\\make.lua",
                "zh-CN"
            ]
        },
        {
            "taskName": "发布英文版",
            "args": [
                ".\\build\\execute.lua",
                "${workspaceRoot}",
                "${workspaceRoot}\\build\\make.lua",
                "en-US"
            ]
        },
        {
            "taskName": "编译C++代码",
            "args": [
                ".\\build\\execute.lua",
                "${workspaceRoot}",
                "${workspaceRoot}\\build\\compile_cpp.lua"
            ]
        },
        {
            "taskName": "预处理",
            "args": [
                ".\\script\\prebuilt\\init.lua",
                "${workspaceRoot}"
            ]
        }
    ]
}