{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "前端",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": true,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "program": "${workspaceRoot}/script/main.lua",
            "runtimeExecutable": "${workspaceRoot}/bin/w3x2lni.exe",
            "runtimeArgs": "${workspaceRoot}/script/main.lua",
            "console": "utf8"
        },
        {
            "name": "后端",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceRoot}/script/map.lua",
            "stopOnEntry": true,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "arg0": "${workspaceRoot}/bin/w3x2lni.exe",
            "arg": [
                "${workspaceRoot}/FinaldayDefendApocalypse.Ver3.3.w3x",
            ],
            "console": "utf8"
        },
        {
            "name": "预生成",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceRoot}/script/prebuilt/init.lua",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "arg0": "${workspaceRoot}/bin/w3x2lni.exe",
            "console": "ansi"
        },
        {
            "name": "解析mpq",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceRoot}/script/custom_mpq.lua",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "arg0": "${workspaceRoot}/bin/w3x2lni.exe",
            "luadll": "${workspaceRoot}/bin/lua53.dll",
            "console": "ansi",
            "arg": [
                "D:\\魔兽争霸III",
                "custom"
            ],
        },
        {
            "name": "转换触发器",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceRoot}/script/convert_wtg.lua",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "arg0": "${workspaceRoot}/bin/w3x2lni.exe",
            "arg": [
                "${workspaceRoot}/命令ID.w3x",
            ],
            "console": "ansi"
        },
        {
            "name": "slk库测试",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceRoot}/script/slk_test.lua",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/script/",
            "path": ".\\?.lua;.\\?\\init.lua",
            "cpath": "${workspaceRoot}/bin/?.dll;",
            "arg0": "${workspaceRoot}/bin/w3x2lni.exe",
            "console": "ansi"
        }
    ]
}
